{
  "name": "privacy-apps",
  "version": "1.2.0",
  "description": "A selection of the best privacy and security apps and services.",
  "keywords": [
    "foss",
    "security",
    "privacy",
    "cybersecurity",
    "android",
    "mobile",
    "apps"
  ],
  "homepage": "https://apps.netwk.pro",
  "bugs": {
    "url": "https://github.com/netwk-pro/netwk-pro.github.io/issues/new/choose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netwk-pro/privacy-apps.git"
  },
  "license": "CC-BY-4.0 OR GPL-3.0-or-later",
  "author": {
    "name": "Scott Lopez",
    "email": "github@sl.neteng.cc",
    "url": "https://bio.netwk.pro"
  },
  "type": "module",
  "scripts": {
    "dev": "mkdocs serve --livereload",
    "start": "npm run dev",
    "build": "mkdocs build",
    "delete": "rm -rf build node_modules package-lock.json",
    "clean": "npm run delete && npm cache clean --force && npm install",
    "lint": "eslint . --ext .mjs,.js,.cjs --config eslint.config.mjs",
    "lint:fix": "eslint . --ext .mjs,.js,.cjs --fix --config eslint.config.mjs",
    "lint:md": "npx markdownlint-cli2 \"**/*.{md,markdown}\" \"#node_modules/**\" \"#build/**\" \"#python-venv/**\"",
    "lint:css": "npx stylelint \"**/*.css\" --ignore-path .stylelintignore --allow-empty-input",
    "format": "npx prettier . --check",
    "format:fix": "npx prettier . --write",
    "lint:all": "npm-run-all --parallel lint lint:md lint:css --sequential format",
    "checkout": "npm run lint:all",
    "verify": "npm run checkout",
    "upgrade": "ncu -u --format group --color",
    "check:updates": "ncu --format group --color",
    "prepare": "npx simple-git-hooks || echo ''"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "autoprefixer": "^10.4.23",
    "browserslist": "^4.28.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "markdownlint": "^0.40.0",
    "markdownlint-cli2": "0.20.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "simple-git-hooks": "^2.13.1",
    "stylelint": "^16.26.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-order": "^7.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "if [ \"$CI\" = \"true\" ]; then exit 0; else npm run lint:all; fi",
    "pre-push": "if [ \"$CI\" = \"true\" ]; then exit 0; else npm run checkout; fi"
  }
}
